<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddingRecipesActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="412dp"
        android:layout_height="734dp">




    <TextView
        android:id="@+id/recipeTitle"
        android:layout_width="218dp"
        android:layout_height="41dp"
        android:layout_marginStart="101dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="648dp"
        android:text="Dish Name"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/descriptionBox"
            android:layout_width="400dp"
            android:layout_height="163dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="18dp"
            android:text="Description"
            app:layout_constraintBottom_toTopOf="@+id/numberOfIngredients"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipeTitle" />

        <TextView
        android:id="@+id/numberOfIngredients"
        android:layout_width="202dp"
        android:layout_height="34dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="203dp"
        android:layout_marginBottom="15dp"
        android:text="Number of ingredients:"
        app:layout_constraintBottom_toTopOf="@+id/servings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionBox" />

    <TextView
        android:id="@+id/servings"
        android:layout_width="203dp"
        android:layout_height="36dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="202dp"
        android:layout_marginBottom="13dp"
        android:text="servings"
        app:layout_constraintBottom_toTopOf="@+id/costOfingredients"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberOfIngredients" />

    <TextView
        android:id="@+id/cookingTime"
        android:layout_width="203dp"
        android:layout_height="36dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="202dp"
        android:layout_marginBottom="160dp"
        android:text="Cooking Time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/costOfingredients" />

    <TextView
        android:id="@+id/costOfingredients"
        android:layout_width="203dp"
        android:layout_height="36dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="202dp"
        android:layout_marginBottom="13dp"
        android:text="Estimated Cost"
        app:layout_constraintBottom_toTopOf="@+id/cookingTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/servings" />

        <TextView
            android:id="@+id/recipe"
            android:layout_width="405dp"
            android:layout_height="125dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="1dp"
            android:text="Recipe"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cookingTime" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
